<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/static/css/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" 
    rel="stylesheet" integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT"
    crossorigin="anonymous">
    <title>Edición de Juegos - Admin</title>
</head>
<body class="body-pagina">
    <header class="barra-menu d-flex flex-column px-4 py-2">
    <div class="d-flex align-items-center justify-content-between w-100">
      <div></div>
      <div id="icon-text" class="d-inline-flex align-items-center gap-2">
        <img src="/static/img/logo.png" alt="Logo" id="logo-menu">
        <h1 class="m-0">Punto de Control</h1>
      </div>

      <button class="boton-tema-pagina">
        <img src="/static/img/sun.png" alt="">
      </button>
    </div>

    <div id="div-alumnos" class="text-center mt-2 w-100">
      <p>Alumnos: Marcos Fernandez | Marcos Pucci</p>
    </div>
  </header>

  <div id="div-btnes-home">
    <button id="btn-home" onclick="window.location.href='/admin'">🎮 Home</button>
  </div>
<main class="d-flex justify-content-center text-center py-3">
  <div>
    <h2 class="text-center">Editar/Agregar Juego</h2>
    <form class="row g-3" id="formEdit">

      <!-- Imagen -->
      <div class="">
        <label for="imagenJuego" class="fw-bold fs-5 text-center">Imagen del juego</label>
        <input type="file" id="imagenJuego" name="imagen">
      </div>

      <!-- Nombre -->
      <div class="">
        <label for="nombreJuego" class="fw-bold fs-5 text-center">Nombre del juego</label>
        <input type="text" id="nombreJuego" name="nombre" placeholder="GTA V..." required>
      </div>

      <!-- Categoria -->
      <div class="">
        <label for="categoriaJuego" class="fw-bold fs-5 text-center d-block mb-2">Categoría del juego</label>
        <select id="categoriaJuego" name="categoria" class="form-select" required>
          <option value="" disabled selected>Seleccioná una categoría</option>
          <option value="PS4">PS4</option>
          <option value="PC">PC</option>
        </select>
      </div>
      
      <div class="mb-3">
        <label for="generoInput" class="fw-bold fs-5 d-block mb-2 text-center">Agregar generos</label>
        <div class="input-group mb-3">
          <input type="text" class="form-control" placeholder="Nuevo Genero" id="generoInput" />
          <button class="btn btn-primary" id="btnAgregarCategoria" type="button">Agregar</button>
        </div>
      </div>

    <ul id="listaCategorias" class="list-group"></ul>

      <!-- Precio -->
      <div class="">
        <label for="precioJuego" class="fw-bold fs-5 text-center">Precio</label>
        <input type="number" id="precioJuego" name="precio" placeholder="$9999..." required>
      </div>

      <!-- Descripción -->
      <div class="">
        <label for="descripcionJuego" class="fw-bold fs-5 text-center">Descripción</label>
        <textarea class="form-control form-control-lg" id="descripcionJuego" rows="4" name="descripcion" placeholder="Juego mundo abierto..." required></textarea>
      </div>

      <!-- Botón Guardar -->
      <div class="col-12 text-center">
        <button id="btn-guardar-cambios" type="submit" class="btn btn-primary px-5 py-3 fw-bold fs-5">Guardar Cambios</button>
      </div>
    </form>
  </div>
</main>
    <script src="/admin/js/scriptEditarAdmin.js"></script>
</body>
</html>